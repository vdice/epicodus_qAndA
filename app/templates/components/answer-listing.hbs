<ul>
  <h3><i>Recent Answers</i></h3>
  <hr>
  {{#each sortedAnswers as |answer|}}
    <li>
      {{#if displayQuestion}}
        <p class="question">
          Q: {{#link-to 'question' answer.question.id}}{{answer.question.query}}{{/link-to}}
        </p>
      {{/if}}
      <h4>
        <i>{{answer.author}}</i>: <strong>{{answer.content}}</strong><br>
        <small>{{format-date answer.date}}</small>
      </h4>
      <hr>
    </li>
  {{/each}}
</ul>
