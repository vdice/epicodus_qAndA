<div class="jumbotron">
  <h2>Ask a Question</h2>
</div>

<div class="container">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="query">Query</label>
      {{input value=query id="query" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{textarea row="4" cols="50" value=notes id="notes" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>
  </form>
</div>

<!-- Save -->
<button class="btn btn-success"{{action 'saveQuestion'}}><i class="fa fa-save"></i></button>
<!-- Cancel -->
{{#link-to 'index'}}
  <button class="btn btn-danger"><i class="fa fa-close"></i></button>
{{/link-to}}
