<div class="jumbotron">
  <h2>{{question.query}}</h2>
  {{add-answer question=question addAnswer="addAnswer"}}
</div>

<h3>
  <small><i>author: {{question.author}}</i></small>
</h3>

<h3>Notes:</h3>
<div class="container">
  {{question.notes}}
</div>

<h3>Answers:</h3>
<div class="container">
  <ul>
    {{#each sortedAnswers as |answer|}}
      <li><i>{{answer.author}}</i>: <strong>{{answer.content}}</strong></li>
    {{/each}}
  </ul>
</div>

{{#link-to 'edit-question' question.id}}
  <button class="btn btn-primary">Edit</button>
{{/link-to}}
<button class="btn btn-danger" {{action 'deleteQuestion' question}}>
  Delete
</button>
